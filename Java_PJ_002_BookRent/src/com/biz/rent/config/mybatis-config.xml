<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
<configuration>
	
	<typeAliases>
		<typeAlias type="com.biz.rent.persistence.BookDTO" alias="BookDTO"/>
		<typeAlias type="com.biz.rent.persistence.RentDTO" alias="RentDTO"/>
		<typeAlias type="com.biz.rent.persistence.UserDTO" alias="UserDTO"/>
		<typeAlias type="com.biz.rent.persistence.RentviewVO" alias="viewVO"/>
			
	</typeAliases>
	
	<!-- DB 연결을 위한 정보 설정 -->
	<environments default="oracleConnection">
	
		<environment id="oracleConnection">
			<!-- 
				MyBATIS에서 JDBC를 사용한 Connection관리 
			-->
			<transactionManager type="JDBC">
			</transactionManager>
			<dataSource type="POOLED">
				<property name="driver" 
						value="oracle.jdbc.OracleDriver"/>
				<property name="url" 
					value="jdbc:oracle:thin:@localhost:1521:xe"/>
				<property name="username" value="book"/>
				<property name="password" value="book"/>
			</dataSource>
		</environment>
	</environments>
		<mappers>
			<mapper resource="com/biz/rent/config/mapper/book-mapper.xml"/>
			<mapper resource="com/biz/rent/config/mapper/rent-mapper.xml"/>
			<mapper resource="com/biz/rent/config/mapper/user-mapper.xml"/>
			<mapper resource="com/biz/rent/config/mapper/view-mapper.xml"/>
		</mappers>

</configuration>